<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <LangVersion>9.0</LangVersion>
  </PropertyGroup>

  <PropertyGroup>
    <Company>Stack Exchange</Company>
    <Description>Stack Exchange APIv2 .NET client</Description>
    <RootNamespace>StackExchange.StacMan</RootNamespace>
    <Version>1.1.0.0</Version>
  </PropertyGroup>

  <ItemGroup>
    <Compile Update="StacManClient.*.cs">
      <DependentUpon>StacManClient.cs</DependentUpon>
    </Compile>
    <Compile Update="Codegen\*.cs">
      <DependentUpon Condition="$([MSBuild]::ValueOrDefault('%(Filename)', '').EndsWith('Methods'))">Methods.tt</DependentUpon>
      <DependentUpon Condition="!$([MSBuild]::ValueOrDefault('%(Filename)', '').EndsWith('Methods'))">Types.tt</DependentUpon>
    </Compile>
    <None Update="Codegen\Methods.ignore">
      <DependentUpon>Methods.tt</DependentUpon>
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
    </None>
    <None Update="Codegen\Methods.tt">
      <Generator>TextTemplatingFileGenerator</Generator>
      <LastGenOutput>Methods.ignore</LastGenOutput>
    </None>
    <None Update="Codegen\Types.ignore">
      <DependentUpon>Types.tt</DependentUpon>
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
    </None>
    <None Update="Codegen\Types.tt">
      <Generator>TextTemplatingFileGenerator</Generator>
      <LastGenOutput>Types.ignore</LastGenOutput>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="IsExternalInit" Version="1.0.2" PrivateAssets="all" />
    <PackageReference Include="Macross.Json.Extensions" Version="2.2.0" />
    <PackageReference Include="System.Text.Json" Version="6.0.2" />
  </ItemGroup>

  <ItemGroup>
    <InternalsVisibleTo Include="StacMan.Tests" />
  </ItemGroup>

  <ItemGroup>
    <Service Include="{508349b6-6b84-4df5-91f0-309beebad82d}" />
  </ItemGroup>

</Project>